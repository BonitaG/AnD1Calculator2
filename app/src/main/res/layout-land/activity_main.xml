<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    tools:context=".MainActivity">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/result_field"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:hint="Result"
            style="@style/calc_btn_style"
            app:layout_constraintTop_toTopOf="parent"/>

        <LinearLayout
            android:id="@+id/c"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/result_field">

            <Button
                android:background="@android:color/darker_gray"
                android:id="@+id/clear"
                android:onClick="onOperationClick"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="c"
                style="@style/calc_btn_style"/>



        </LinearLayout>


        <LinearLayout
            android:id="@+id/first_line"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/c"
            app:layout_constraintStart_toStartOf="parent">
            <Button
                android:id="@+id/seven"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="7"
                android:onClick="onNumClick"
                style="@style/calc_btn_style"/>
            <Button

                android:id="@+id/eight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="8"
                android:onClick="onNumClick"
                style="@style/calc_btn_style"
                />
            <Button

                android:id="@+id/nine"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="9"
                android:onClick="onNumClick"
                style="@style/calc_btn_style"/>
            <Button

                android:id="@+id/multiply"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="*"
                android:onClick="onOperationClick"
                style="@style/calc_btn_style"/>



        </LinearLayout>
        <LinearLayout
            android:id="@+id/second_line"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/first_line"
            app:layout_constraintStart_toStartOf="parent">
            <Button

                android:id="@+id/six"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="6"
                android:onClick="onNumClick"
                style="@style/calc_btn_style"/>
            <Button

                android:id="@+id/five"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5"
                android:onClick="onNumClick"
                style="@style/calc_btn_style"/>
            <Button

                android:id="@+id/four"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4"
                android:onClick="onNumClick"
                style="@style/calc_btn_style"/>
            <Button
                android:id="@+id/plus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+"
                android:onClick="onOperationClick"
                style="@style/calc_btn_style"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/third_line"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/first_line"
            app:layout_constraintStart_toEndOf="@id/first_line">
            <Button
                android:id="@+id/three"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3"
                android:onClick="onNumClick"
                style="@style/calc_btn_style"/>
            <Button
                android:id="@+id/two"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2"
                android:onClick="onNumClick"
                style="@style/calc_btn_style"/>
            <Button
                android:id="@+id/one"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:onClick="onNumClick"
                style="@style/calc_btn_style"/>

            <Button
                android:id="@+id/minus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-"
                android:onClick="onOperationClick"
                style="@style/calc_btn_style"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/fourth_line"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/second_line"
            app:layout_constraintStart_toEndOf="@id/second_line">
            <Button
                android:id="@+id/division"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="/"
                android:onClick="onOperationClick"
                style="@style/calc_btn_style"/>
            <Button
                android:id="@+id/zero"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:onClick="onNumClick"
                style="@style/calc_btn_style"/>
            <Button
                android:id="@+id/dot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="."
                android:onClick="onNumClick"
                style="@style/calc_btn_style"/>
            <Button
                android:id="@+id/equal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="="
                android:onClick="onOperationClick"
                style="@style/calc_btn_style"/>





        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>






















